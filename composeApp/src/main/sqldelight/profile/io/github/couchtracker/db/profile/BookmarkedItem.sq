import io.github.couchtracker.db.profile.externalids.BookmarkableExternalId;
import kotlin.time.Instant;

/**
 * Saves the list of shows in the user's collection.
 */
CREATE TABLE BookmarkedItem(
  itemId TEXT AS BookmarkableExternalId PRIMARY KEY NOT NULL,
  addDate TEXT AS Instant NOT NULL DEFAULT (strftime('%Y-%m-%dT%H:%M:%fZ', 'now'))
);

selectAll:
SELECT * FROM BookmarkedItem;

insert:
INSERT INTO BookmarkedItem(itemId) VALUES (?);

delete:
DELETE FROM BookmarkedItem WHERE itemId=?;